<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 다른 패키지들이 함께 사용할 설정정보들을 넣어둔다. -->
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="customer" namespace="/customer" extends="default" >
		<!--customer 부분 (로그인 , 회원가입 , 로그아웃 ID , Password 찾기)-->
		<action name = "loginForm">
			<result>login.jsp</result>
		</action>
		<action name = "login" class = "first.cva.action.CustomerAction" method = "login">
			<result type = "redirect">index</result> 
		</action>
	</package>
</struts>
